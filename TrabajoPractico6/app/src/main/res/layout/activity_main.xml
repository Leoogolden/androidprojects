<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <Button
        android:id="@+id/btnElegirFoto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="ElegirFoto"
        android:text="Elegir foto existente"
        app:layout_constraintBottom_toTopOf="@+id/btnTomarFoto" />

    <Button
        android:id="@+id/btnTomarFoto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="TomarFoto"
        android:text="Tomar Foto"
        android:layout_marginVertical="100dp"
        app:layout_constraintVertical_bias="0.45"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <Button
        android:id="@+id/btnVerEstadisticas"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="VerEstadisticas"
        android:text="Ver Estadisticas"
        app:layout_constraintTop_toBottomOf="@+id/btnTomarFoto" />


</android.support.constraint.ConstraintLayout>